extends homelayout

block homecontent
  .container
    .row.mb-3.mt-5
      .col-12
        h1 Donation from #{donation.name}
        //- pre= JSON.stringify(donation, null, 2)
        a(href=baseUrl+'/home/donations/view') Back to all donations
    .row.mb-3
      .col-12
        <form method="post">
          <div class="form-group row">
            <label for="inputname" class="col-sm-2 form-control-label">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="name" id="inputname" value="#{donation.name}" placeholder="Name">
            </div>
          </div>
          <div class="form-group row">
            <label for="inputdate" class="col-sm-2 form-control-label">Date</label>
            <div class="col-sm-10">
              <input type="date" class="form-control" name="date" id="inputdate" value="#{donation.when_formatted}">
            </div>
          </div>
          <div class="form-group row">
            <label for="inputamount" class="col-sm-2 form-control-label">Amount</label>
            <div class="col-sm-10">
              <input type="number" step="0.01" class="form-control" name="amount" id="inputamount" value="#{donation.amount}">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2">Approval</label>
            <div class="col-sm-10">
              <div class="checkbox">
                <label>
                  if donation.approved
                    <input name="approved" id="inputapproved" type="checkbox" checked> Publicly Visible
                  else
                    <input name="approved" id="inputapproved" type="checkbox"> Publicly Visible
                </label>
              </div>
            </div>
          </div>
          <div class="form-group row">
            <label for="inputcomment" class="col-sm-2 form-control-label">Comment</label>
            <div class="col-sm-10">
              <textarea class="form-control w-100" name="comment" id="inputcomment">#{donation.comment}</textarea>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-secondary">Save</button>
            </div>
          </div>
        </form>